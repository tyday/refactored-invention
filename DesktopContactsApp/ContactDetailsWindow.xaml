<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="168.153" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBox" 
                     Margin="0,0,0,5"/>
            <TextBox x:Name="emailTextBox" 
                     Margin="0,0,0,5"/>
            <TextBox x:Name="phoneTextBox" 
                     Margin="0,0,0,5"/>
            <Button Content="Save"
                    Margin="0 0 0 5"
                    x:Name="cdUpdateButton"
                    Click="cdUpdateButton_Click"/>
            <Button Content="Delete"
                    Margin="0 0 0 5"
                    Background="Red"
                    Foreground="White"
                    x:Name="cdDeleteButton"
                    Click="cdDeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
